<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/textColorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView_evento_favoritos"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/image_placeholder" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_weight="0.04"
                    android:background="@android:color/holo_orange_dark">

                    <TextView
                        android:id="@+id/textview_hora_favoritos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:text="20:00"
                        android:textColor="@color/textColorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_titulo_favoritos"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:lines="1"
                        android:text="O Reencontro Bang"
                        android:textColor="@color/textColorGrey"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_local_favoritos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Quelimane"
                        android:textColor="@color/textColorGrey"
                        android:textSize="16sp" />

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="83dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/textColorGrey" />

                <ImageView
                    android:id="@+id/imageView_favourite_favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:paddingBottom="4dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_favorite_border_black_24dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>


